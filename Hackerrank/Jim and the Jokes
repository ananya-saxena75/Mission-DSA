import java.util.*;

public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        int count = 0;
        for (int i = 0; i < t; i++) {
            int d = sc.nextInt();
            int m = sc.nextInt();
            if (d % m == 0) count++;
        }
        System.out.println(count);
    }
}
