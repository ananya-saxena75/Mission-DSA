class Solution {
    public int numOfWays(int n) {
        final long MOD = 1_000_000_007L;
        long a = 6, b = 6; // a: ABC patterns; b: ABA patterns
        for (int i = 2; i <= n; i++) {
            long na = (2 * a + 2 * b) % MOD;
            long nb = (2 * a + 3 * b) % MOD;
            a = na; b = nb;
        }
        return (int)((a + b) % MOD);
    }
}
